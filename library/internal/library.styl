@font-face
  font-display fallback
  font-family 'Montserrat-Regular'
  src url(/assets/library/Montserrat-Regular.ttf) format('truetype')

@font-face
  font-display fallback
  font-family 'Montserrat-Medium'
  src url(/assets/library/Montserrat-Medium.ttf) format('truetype')

$tablet-breakpoint = 700px
$desktop-breakpoint = 1024px

:root
  --bar-color rgba(255, 0, 0, 0.2)
  // 1px bars, repeating every 6px
  --background-baseline repeating-linear-gradient(
    to bottom,
    var(--bar-color),
    var(--bar-color),
    transparent 1px,
    transparent 6px
  )

.pali__wrapper
  line-height 2.5rem
  background-color #F8FAFC
  min-height 100vh

  @media (min-width $tablet-breakpoint)
    padding 0 0 0 30rem

.pali__home-icon
  display none
  padding 2rem 5rem

  @media (min-width $tablet-breakpoint)
    display block

  img
    width 100%

.pali__mobile-header
  display flex
  align-items center
  height 5rem
  padding 0 2rem
  box-shadow 0 2px 4px 0 rgba(0,0,0,0.10)
  margin-bottom 2rem

  @media (min-width $tablet-breakpoint)
    display none

  button
    display flex
    align-items center

  svg
    width 3rem

  span
    font-family 'Montserrat-Regular'
    font-size 2rem
    margin-left 4rem


.pali__nav
  background-color #fff
  box-shadow 0 2px 4px 0 rgba(0,0,0,0.10)
  overflow auto
  position fixed
  top 5rem
  left 0
  height 100vh
  width 100%
  transform translateX(-100%)
  transition transform 400ms cubic-bezier(0, 1.02, 0.48, 0.92)

  @media (min-width $tablet-breakpoint)
    top 0
    width 28rem
    transform translateX(0)


  &--visible
    transform translateX(0)

  h1
    text-align center
    margin-bottom 2rem
    padding-bottom 2rem
    border-bottom 1px solid #DAE1E7

.pali__list
  font-size 1.6rem
  font-family 'Montserrat-Regular'
  padding 2rem 0

.pali__list-header
  font-size 1.4rem
  text-transform uppercase
  letter-spacing 0.1rem
  color rgba(0, 0, 0, 0.6)
  margin-bottom 1rem

.pali__list-item + .pali__list-item.pali__list-header
  margin-top 3rem

.pali__list-item
  padding-left 5rem

  &:hover
    cursor pointer

  &--active
    border-left 4px solid #ef7f01
    padding-left calc(5rem - 4px)

  & + &
    margin-top 0.5rem

.pali__main
  font-family 'Montserrat-Regular'
  padding 2rem;

  @media (min-width $desktop-breakpoint)
    padding 3rem 8rem;

  h1,
  h2
    font-family 'Montserrat-Medium'
    font-size 2rem

  h1
    margin-bottom 5rem
    text-transform uppercase
    letter-spacing 0.1rem

  h2
    display flex
    margin-bottom 2rem

.pali__external-link
  display inline-flex
  height 2rem
  width 2rem
  color rgba(0,0,0,0.6)
  margin-left 1rem

.pali__section
  max-width 1436px

.pali__language-select
  height 2.5rem
  width 5rem

  &--overview
    margin-left auto

  &--preview
    position fixed
    bottom 0.5rem
    right 8.5rem

.pali__bars-select
  height 2.5rem
  width 7rem
  position fixed
  bottom 0.5rem
  right 0.5rem

.pali__bars
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  height 100%
  min-height 400vh
  content ''
  background-image var(--background-baseline)
  z-index 1000
  pointer-events none

.pali__colors
  margin -1rem

  h2
    flex-basis 100%
    padding-left 1rem
    margin-bottom 0

.pali__color-wrapper
  display flex
  flex-wrap wrap

  & + &
    margin-top 3rem

.pali__color-container
  display flex
  flex-direction column
  background #fff
  box-shadow 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)
  width 23rem
  margin 1rem

  div
    padding 2rem
    font-size 1.2rem

  p
    display flex

    span:first-of-type
      display inline-block
      flex 0 0 4rem
      color rgba(0, 0, 0, 0.6)
      text-transform uppercase

.pali__color-example
  height 7.5rem
  border-bottom 1px solid #DAE1E7

.pali__color-title
  display inline-block
  margin-bottom 0.5rem
  font-family 'Montserrat-Medium'
  font-size 1.4rem
  color #000

.pali__typography-container

  & + &
    margin-top 3rem

.pali__typography-line
  display flex
  align-items baseline

  & + &
    margin-top 0.4rem

.pali__typography-size-title
  font-size 1.1rem
  line-height 1.2rem
  letter-spacing 0.02rem
  color #2F77C8
  margin-bottom 0.8rem

.pali__typography-font-title
  flex 0 0 15rem

.pali__icons
  display flex
  flex-wrap wrap
  margin -0.5rem

.pali__icon-container
  display flex
  flex-direction column
  align-items center
  width 28rem
  background #fff
  box-shadow 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)
  margin 0.5rem
  padding 2rem 2rem 1rem

  svg
    width 3rem
    height 3rem

  div
    font-size 1.2rem
    text-align center

  pre
    font-family monospace

.pali__icon-title
  display inline-block
  margin-top 1rem
  font-family 'Montserrat-Medium'
  font-size 1.4rem

.pali__icon-usage
  font-size 1.2rem
  color rgba(0, 0, 0, 0.6)
