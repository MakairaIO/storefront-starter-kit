$breakpoint-large = 1000px

.ratings
  padding 1.2rem 1.5rem

  @media (min-width $breakpoint-large)
    padding 1.2rem 2rem

  &__form
    padding-bottom 1.5rem
    margin-bottom 2rem
    max-width 500px

  .heading
    margin-bottom 1.3rem

  .ratings__rating
    padding-bottom 2rem
    max-width 700px

  .ratings__rating-header
    display flex
    gap 1rem

.star-input
  display flex
  cursor pointer

  &--disabled
    cursor auto

  .star-input__star
    width 20px
    height 20px
    color var(--neutral-60)

    &--active
      color var(--brand-3)