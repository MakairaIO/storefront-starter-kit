.product-placement
  padding var(--spacing-s) var(--spacing-m)

  @media (min-width var(--breakpoint-m))
    padding var(--spacing-s) var(--spacing-m)

.product-placement__list
  --breakpoint-xxs 25.00rem
  display grid
  grid-template-columns repeat(1, minmax(0, 1fr))
  grid-gap var(--spacing-m) 0
  width 100%

  @media (min-width var(--breakpoint-xxs))
    grid-template-columns repeat(2, minmax(0, 1fr))

  @media (min-width var(--breakpoint-xs))
    grid-template-columns repeat(3, minmax(0, 1fr))

  @media (min-width var(--breakpoint-m))
    grid-template-columns repeat(auto-fit, minmax(11.56rem, 16.88rem))

.product-placement-item
  padding var(--spacing-l) var(--spacing-s) 0

.product-placement__text
  margin-bottom var(--spacing-m)

.product-placement-item__image
  display flex
  justify-content center

  img
    max-width 100%
    max-height 10.12rem

.product-placement-item__title
  text-align center

.product-placement-item__manufacturer
  display block
  line-height 0.75rem
  letter-spacing 0.19rem
  color var(--color-primary-main)
  text-transform uppercase
  text-align center
  padding var(--spacing-xs) 0 var(--spacing-xs)
  margin var(--spacing-xs) 0

.product-placement-item__prices
  text-align center
  padding var(--spacing-xs) 0 var(--spacing-xs)
  margin-top var(--spacing-xs)

.product-placement-item__price
  font-size var(--font-small)
  font-weight var(--font-weight-semi-bold)
  line-height 1.50rem
  letter-spacing 0.01rem

.product-placement-item__actions
  // margin-top 0.44rem
  text-align center
