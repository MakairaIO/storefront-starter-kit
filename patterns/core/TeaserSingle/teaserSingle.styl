.single-teaser
  background var(--tertiary)
  margin 1.2rem 0

  @media (min-width var(--breakpoint-xs))
    display flex
    margin 1.2rem 1.5rem

  @media (min-width var(--breakpoint-m))
    margin 1.2rem 2rem

.single-teaser__image
  display block
  height 29.4rem

  @media (min-width var(--breakpoint-xs))
    height 26.4rem

  @media (min-width var(--breakpoint-s))
    height 31.2rem
    max-width 36.8rem
    flex 1 0 auto

  picture
    display flex
    height 100%

  img
    width 100%
    object-fit cover

.single-teaser__content
  padding 1.2rem 1.5rem

  @media (min-width var(--breakpoint-xs))
    flex 1 0 50%

  @media (min-width var(--breakpoint-s))
    display flex
    flex-direction column
    align-items flex-start

.single-teaser__button
  margin-top 1.2rem

  @media (min-width var(--breakpoint-s))
    margin-top auto
