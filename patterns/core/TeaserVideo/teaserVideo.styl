.video-teaser
  display block
  position relative
  color var(--neutral-00)
  margin var(--spacing-s) 0

  @media (min-width var(--breakpoint-xl))
    padding 0 var(--spacing-m)

.video-teaser__video
  display block
  width 100%
  @media (min-width var(--breakpoint-m))
    width 100%
    height auto
  video
    height 100%

.video-teaser__sub-heading
  text-transform uppercase
  font-size var(--font-extrasmall)
  line-height 0.81rem
  letter-spacing 0.19rem
  @media (min-width var(--breakpoint-m))
    font-size var(--font-regular)

.video-teaser__heading
  margin-bottom var(--spacing-xl)
  .heading
    color var(--color-danger-main)
    text-transform uppercase
    font-size var(--font-h4)
    line-height 2.06rem
    letter-spacing 0.07rem
    max-width 13.25rem
    margin var(--spacing-m) 0
    @media (min-width var(--breakpoint-m))
      font-size var(--font-h2)
      line-height 3.13rem
      margin-top var(--spacing-m)
      max-width 20.31rem

.video-teaser__content
  background-color var(--color-primary-hover)
  padding var(--spacing-xl) var(--spacing-m)
  position relative
  @media (min-width var(--breakpoint-m))
    position absolute
    top 0
    right 1.25rem
    width 16.69rem
    height 100%
    opacity 0.85
  @media (min-width var(--breakpoint-xl))
    right 3.44rem
    padding var(--spacing-xl) var(--spacing-m) var(--spacing-m) var(--spacing-l)

  .heading
    @media (min-width var(--breakpoint-m))
      font-size var(--font-h5)
      line-height 1.56rem

  .copytext
    font-size var(--font-small)
    line-height 1.25rem
    @media (min-width var(--breakpoint-m))
      font-size var(--font-regular)
      line-height 1.56rem

.video-teaser__buy-box
  display flex
  align-items center
  justify-content space-between
  margin var(--spacing-m) 0
  width 100%
  text-transform uppercase
  @media (min-width var(--breakpoint-s))
    position relative
    top 0
    padding 0
    margin-top var(--spacing-xl)

.video-teaser__hint
  text-transform uppercase

.video-teaser__play-wrapper
  position absolute
  bottom 1.25rem
  right 1.25rem
  @media (min-width var(--breakpoint-m))
    right 19.19rem
  @media (min-width var(--breakpoint-xl))
    right 20.63rem

.video-teaser__play-button
  color var(--color-primary-main)
  width 2.81rem
  height 2.81rem
  &:hover
    cursor pointer
    color var(--color-neutral-content)
  @media (min-width var(--breakpoint-m))
    width 1.88rem
    height 1.88rem

.video-teaser-player
  position relative
