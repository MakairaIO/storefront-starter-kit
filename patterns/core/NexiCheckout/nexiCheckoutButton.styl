.checkout-wrapper
  height 40vw
  background-image var(--nexi-background)
  background-position center
  background-size cover
  position relative
  display flex
  align-items center
  justify-content center
  
  &:before
    content ''
    width 100%
    height 100%
    background-color rgba(0,0,0,0.5)
    position absolute
    top 0
    left 0
  
  &__content
    display flex
    align-items center
    gap 48px
    position relative
    z-index 1

    &__img-container
      border-radius 8px
      overflow hidden
      padding 8px
      background-color var(--neutral-00)
      width 45%
      max-width 250px

      picture
        width 100%
        height 100%

        img
          width 100%
          height 100%
          object-fit contain
    
    &__text
      display flex
      flex-direction column
      align-items flex-start
      gap 16px
      color var(--neutral-00)
      width 45%
      max-width 400px