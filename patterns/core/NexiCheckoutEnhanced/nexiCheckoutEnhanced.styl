.checkout-wrapper
  width 100%
  min-height 40vw
  background var(--nexi-background)
  background-size cover
  background-position center
  position relative
  display flex
  justify-content center
  align-items center
  padding 48px

  &:before
    content ''
    width 100%
    height 100%
    position absolute
    top 0
    left 0

  &.overlay--light
    color var(--neutral-100)

    &:before
      background-color rgba(255,255,255,0.5)
  
  &.overlay--dark
    color var(--neutral-00)

    &:before
      background-color rgba(0,0,0,0.5)
  
  &__content
    position relative
    z-index 1
    display grid
    align-items center
    gap 48px
    width 80%
    max-width 800px

    &.direction--horizontal
      grid-template-columns repeat(2, 1fr)

    &.direction--vertical
      grid-template-columns repeat(1, 1fr)

        .checkout-wrapper__content__img-container
          max-width 400px

    &__text
      justify-self stretch

      &__heading-container
        display flex
        flex-direction column
        gap 8px

        &__price-container
          display flex
          align-items center
          gap 4px

          &__badge
            --badge-size 8px
            width var(--badge-size)
            height var(--badge-size)
            background-color var(--positive)
            display inline-block
            border-radius 50%
            border 1px solid var(--primary)
          
          &__price
            diana()
            font-weight var(--font-weight-medium)
      
    &__img-container
      background-color var(--img-background)
      width 100%
      justify-self stretch
      border-radius 16px
      overflow hidden

      &.vertical
        max-width 400px
        justify-self center

      img
        width 100%
        aspect-ratio 1
        object-fit contain