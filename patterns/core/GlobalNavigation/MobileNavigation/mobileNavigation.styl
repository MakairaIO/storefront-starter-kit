$breakpoint-small = 475px

.mobile-navigation__flyout
  height 100%
  width 100%
  background var(--neutral-00)
  position fixed
  top 0
  left 0
  z-index var(--z-index-high)
  overflow auto
  transform translateX(-100%)
  transition transform 400ms cubic-bezier(0, 1.02, 0.48, 0.92)

  @media (min-width $breakpoint-small)
    max-width 40rem
    box-shadow var(--elevation-m)

  &--visible
    transform translateX(0)


.mobile-navigation__header
  display flex
  align-items center
  justify-content space-between
  padding 0.6rem 1.5rem 0.7rem
  border-bottom 1px solid var(--neutral-20)

  .language-switch
    margin-left 1.8rem

.mobile-navigation__search
  flex 1
  margin-left 1.8rem
  position relative

  @media (min-width $breakpoint-small)
    display none

  .icon
    height 1.8rem
    width 3.6rem
    color var(--neutral-50)
    position absolute
    left 0
    top 50%
    transform translateY(-50%)

.mobile-navgation__search-input
  width 100%
  padding-left 3.6rem

  // TODO: Refactor styles into generic <Input> component
  height 3.6rem
  font-size 1.3rem
  line-height 1.8rem
  color var(--neutral-90)
  background var(--neutral-00)
  border 1px solid var(--primary)
  border-radius 4px
  margin 0.6rem 0 0.4rem

.mobile-navigation__item
  display flex
  flex-direction column
  justify-content center
  font-size 1.4rem
  font-weight var(--font-weight-regular)
  line-height 1.8rem
  color var(--neutral-90)

  & + &
    border-top 1px solid var(--neutral-20)


  &:last-of-type
    border-bottom 1px solid var(--neutral-20)

  &--main
    font-size 1.6rem
    font-weight var(--font-weight-medium)
    letter-spacing 0.023rem
    padding-left 1.5rem

    &.mobile-navigation__item--no-subcats
      padding-left 3.5rem

  &--expanded
    border-bottom 1px solid var(--neutral-20)

.mobile-navigation__link
  display flex
  align-items center
  justify-content space-between
  padding 0.9rem 0
  width 100%
  position relative

  &:hover
    cursor pointer

  .mobile-navigation__item--main > &
    justify-content flex-start

.mobile-navigation__expand-icon
  height 1.4rem
  width 1.4rem
  margin-right 1.5rem

  .mobile-navigation__item--main > .mobile-navigation__link > &
    margin-right 0.6rem

.mobile-navigation__subcategories
  padding-left 2.4rem

  .mobile-navigation__item--main + &
    padding-left 3.6rem

.mobile-navigation__info-links
  display flex
  flex-direction column
  margin-top 3rem
  padding-left 1.5rem

.mobile-navigation__info-link
  font-size 1.4rem
  line-height 1.8rem
  color var(--neutral-90)
  text-decoration none

  & + &
    margin-top 1.5rem

