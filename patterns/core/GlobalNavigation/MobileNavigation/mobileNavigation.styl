.mobile-navigation__flyout
  height 100%
  width 100%
  background var(--neutral-00)
  position fixed
  top 0
  left 0
  z-index var(--z-index-high)
  overflow auto
  transform translateX(-100%)
  transition transform 400ms cubic-bezier(0, 1.02, 0.48, 0.92)

  @media (min-width var(--breakpoint-xs))
    max-width 25.00rem
    box-shadow var(--elevation-m)

  &--visible
    transform translateX(0)


.mobile-navigation__header
  display flex
  align-items center
  justify-content space-between
  padding var(--spacing-xs) var(--spacing-m) var(--spacing-s)
  border-bottom 0.06rem solid var(--neutral-20)

  .language-switch
    margin-left var(--spacing-m)

.mobile-navigation__search
  flex 1
  margin-left var(--spacing-m)
  position relative

  @media (min-width var(--breakpoint-xs))
    display none

  .icon
    height 1.13rem
    width 2.25rem
    color var(--neutral-50)
    position absolute
    left 0
    top 50%
    transform translateY(-50%)

.mobile-navgation__search-input
  width 100%
  padding-left var(--spacing-xl)

  // TODO: Refactor styles into generic <Input> component
  height 2.25rem
  font-size var(--font-small)
  line-height 1.13rem
  color var(--neutral-90)
  background var(--neutral-00)
  border 0.06rem solid var(--primary)
  border-radius var(--border-radius-small)
  margin var(--spacing-xs) 0 var(--spacing-xs)

.mobile-navigation__item
  display flex
  flex-direction column
  justify-content center
  font-size var(--font-small)
  font-weight var(--font-weight-regular)
  line-height 1.13rem
  color var(--neutral-90)

  & + &
    border-top 0.06rem solid var(--neutral-20)


  &:last-of-type
    border-bottom 0.06rem solid var(--neutral-20)

  &--main
    font-size var(--font-regular)
    font-weight var(--font-weight-medium)
    letter-spacing 0.01rem
    padding-left var(--spacing-m)

    &.mobile-navigation__item--no-subcats
      padding-left var(--spacing-xl)

  &--expanded
    border-bottom 0.06rem solid var(--neutral-20)

.mobile-navigation__link
  display flex
  align-items center
  justify-content space-between
  padding var(--spacing-s) 0
  width 100%
  position relative

  &:hover
    cursor pointer

  .mobile-navigation__item--main > &
    justify-content flex-start

.mobile-navigation__expand-icon
  height 0.87rem
  width 0.87rem
  margin-right var(--spacing-m)

  .mobile-navigation__item--main > .mobile-navigation__link > &
    margin-right var(--spacing-xs)

.mobile-navigation__subcategories
  padding-left var(--spacing-l)

  .mobile-navigation__item--main + &
    padding-left var(--spacing-xl)

.mobile-navigation__info-links
  display flex
  flex-direction column
  margin-top var(--spacing-xl)
  padding-left var(--spacing-m)

.mobile-navigation__info-link
  font-size var(--font-small)
  line-height 1.13rem
  color var(--neutral-90)
  text-decoration none

  & + &
    margin-top var(--spacing-m)

