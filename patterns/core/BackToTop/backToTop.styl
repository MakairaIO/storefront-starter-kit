html 
  scroll-behavior smooth


.back-to-top
  position fixed
  display flex
  background var(--color-base-main)
  justify-content center
  align-items center
  box-shadow inset 0 0 0 0.13rem currentColor
  bottom 2.50rem
  z-index var(--z-index-high)
  right 1.25rem
  width 2.75rem
  height 2.75rem
  opacity 0
  transition 0.4s all
  pointer-events none
  border-radius var(--border-radius-full)

  @media (max-width var(--breakpoint-s)) and (orientation: portrait)
    bottom 1.50rem
    
  &--visible
    pointer-events all
    opacity 1

  .icon
    height 1.75rem
    width 1.75rem
