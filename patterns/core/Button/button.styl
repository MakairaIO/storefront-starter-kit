.button
  display inline-block
  color var(--color-base-content)
  font-size var(--font-small)
  line-height 1.13rem
  letter-spacing 0.02rem
  background var(--color-primary-content)
  border 0.06rem solid var(--color-primary-main)
  border-radius var(--border-radius-small)
  padding var(--spacing-s) var(--spacing-s) var(--spacing-s)
  margin var(--spacing-xs) 0 var(--spacing-xs)
  text-align center

  &:hover
    cursor pointer

  &:disabled
    cursor auto

  &--color-primary-main
    background var(--color-primary-main)
    border-color var(--color-primary-main)
    color var(--color-primary-content)
    font-weight var(--font-weight-medium)

    &:hover
      background var(--color-base-content)

    &:active
      background var(--color-primary-main)

    &:disabled
      background var(--color-primary-content)
      border-color var(--color-primary-content)
      color var(--color-base-darker)

  &--color-primary-main-alt
    background var(--color-accent-main)
    border-color var(--color-accent-main)
    color var(--color-primary-content)
    font-weight var(--font-weight-medium)

    &:hover
      background var(--button-primary-alt-hover)

    &:active
      background var(--button-primary-alt-active)

    &:disabled
      background var(--color-primary-content)
      border-color var(--color-primary-content)

  &--color-accent-main
    background var(--color-primary-content)
    border-color var(--color-primary-content)
    color var(--color-primary-main)
    font-weight var(--font-weight-medium)

    &:hover
      border-color var(--color-primary-main)
      color var(--color-base-content)

    &:active
      background var(--color-base-darker)
      border-color var(--color-primary-main)
      color var(--color-base-content)

    &:disabled
      background var(--color-primary-content)
      border-color var(--color-primary-content)
      color var(--color-primary-content)

  &--color-primary-content
    background var(--color-primary-content)
    border-color var(--color-primary-content)
    color var(--color-base-darkest)

    &:hover
      background var(--color-primary-content)
      border-color var(--color-primary-content)
      color var(--color-primary-main)

    &:active
      background var(--color-primary-content)
      border-color var(--color-primary-main)
      color var(--color-base-content)

    &:disabled
      background var(--color-primary-content)
      border-color var(--color-primary-content)
      color var(--color-primary-content)

  &--color-primary-main
    color var(--color-primary-main)
    border none
    padding var(--spacing-xs) var(--spacing-s) var(--spacing-xs)
    margin var(--spacing-xs) 0 var(--spacing-xs)

    &:hover
      border 0.06rem solid var(--color-primary-content)

    &:active
      background var(--color-primary-content)
      border 0.06rem solid var(--color-primary-content)
      color var(--color-base-darkest)

    &:disabled
      background var(--color-primary-content)
      border none
      color var(--color-primary-content)

    // Overrides of generic styling for Link-Button
    &.button--icon-right
      .button__text
        margin-right 0

    &.button--icon-left
      .button__text
        margin-left 00

  &--loading,
  &--icon
    display inline-flex
    align-items center

  &--icon-only
    padding var(--spacing-s) 0

    &:hover
      background var(--color-primary-content)
      border-color var(--color-primary-content)
      color var(--color-primary-main)

    &:active
      background var(--color-primary-content)
      border-color var(--color-primary-main)
      color var(--color-base-content)

    &:disabled
      background var(--color-primary-content)
      border-color var(--color-primary-content)
      color var(--color-primary-content)


  &--color-primary-main-icon
    padding var(--spacing-s) 0
    background var(--color-primary-content)
    border none
    color var(--color-base-content)

    &:hover
      background var(--color-base-darker)
      border 0.06rem solid var(--color-base-darker)

    &:active
      background var(--color-primary-content)
      border 0.06rem solid var(--color-primary-content)

    &:disabled
      background var(--color-primary-content)
      border none
      color var(--color-primary-content)

  &--icon-right
    .button__text
      margin-right var(--spacing-s)

  &--icon-left
    .button__text
      margin-left var(--spacing-s)

    .icon
      order -1

.button__text
  width 100%

.button--loading,
.button--icon
  .icon
    // styles for icon-only buttons
    height 1.13rem
    width 2.13rem // FIXME: Why is flexbox breaking all buttons if we remove the explicit width here?!
    flex 0 0 2.13rem // 2.25rem - 0.13rem border

  // Overrides for specific icons
  &:not(.button--icon-only)
    .icon--chevron-right
    .icon--chevron-left
      flex 0 0 0.44rem

    .icon--chevron-down
      flex 0 0 1.00rem

    .icon--check
      flex 0 0 0.81rem

    .icon--cart
      flex 0 0 1.25rem

a.button
  text-decoration none

.button--loading
  .icon
    svg
      animation rotate-center 1.3s infinite ease-in-out

@keyframes rotate-center
  0%
    transform rotate(0)
  100%
    transform rotate(360deg)
