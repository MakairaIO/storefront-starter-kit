.rc-slider 
  position relative
  height 0.88rem
  padding var(--spacing-xs) 0
  width 100%
  border-radius var(--border-radius-big)
  -ms-touch-action none
  touch-action none
  box-sizing border-box
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

.rc-slider * 
  box-sizing border-box
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

.rc-slider-rail 
  position absolute
  width 100%
  background-color var(--color-neutral-content)
  height 0.25rem
  border-radius var(--border-radius-big)

.rc-slider-track 
  position absolute
  left 0
  height 0.25rem
  border-radius var(--border-radius-big)
  background-color var(--color-neutral-content)

.rc-slider-handle 
  position absolute
  width 0.88rem
  height 0.88rem
  cursor pointer
  cursor -webkit-grab
  margin-top -var(--spacing-xs)
  cursor grab
  border-radius var(--border-radius-full)
  border solid 0.13rem var(--color-neutral-content)
  background-color var(--color-base-main)
  -ms-touch-action pan-x
  touch-action pan-x

.rc-slider-handle-dragging.rc-slider-handle-dragging.rc-slider-handle-dragging 
  border-color var(--color-info-main)
  box-shadow 0 0 0 0.31rem var(--color-neutral-content)

.rc-slider-handle:focus 
  outline none

.rc-slider-handle-click-focused:focus 
  border-color var(--color-neutral-content)
  box-shadow unset

.rc-slider-handle:hover 
  border-color var(--color-info-main)

.rc-slider-handle:active 
  border-color var(--color-info-main)
  box-shadow 0 0 0.31rem var(--color-info-main)
  cursor -webkit-grabbing
  cursor grabbing

.rc-slider-mark 
  position absolute
  top 1.13rem
  left 0
  width 100%
  font-size var(--font-extrasmall)

.rc-slider-mark-text 
  position absolute
  display inline-block
  vertical-align middle
  text-align center
  cursor pointer
  color var(--color-base-main)

.rc-slider-mark-text-active 
  color var(--color-primary-hover)

.rc-slider-step 
  position absolute
  width 100%
  height 0.25rem
  background transparent

.rc-slider-dot 
  position absolute
  bottom -0.13rem
  margin-left -var(--spacing-xs)
  width 0.50rem
  height 0.50rem
  border 0.13rem solid var(--color-neutral-content)
  background-color var(--color-base-main)
  cursor pointer
  border-radius var(--border-radius-full)
  vertical-align middle

.rc-slider-dot-active 
  border-color var(--color-neutral-content)

.rc-slider-dot-reverse 
  margin-right -var(--spacing-xs)

.rc-slider-disabled 
  background-color var(--color-neutral-content)

.rc-slider-disabled .rc-slider-track 
  background-color var(--color-base-main)

.rc-slider-disabled .rc-slider-handle,
.rc-slider-disabled .rc-slider-dot 
  border-color var(--color-base-main)
  box-shadow none
  background-color var(--color-base-main)
  cursor not-allowed

.rc-slider-disabled .rc-slider-mark-text,
.rc-slider-disabled .rc-slider-dot 
  cursor not-allowed !important

.rc-slider-vertical 
  width 0.88rem
  height 100%
  padding 0 var(--spacing-xs)

.rc-slider-vertical .rc-slider-rail 
  height 100%
  width 0.25rem

.rc-slider-vertical .rc-slider-track 
  left 0.31rem
  bottom 0
  width 0.25rem

.rc-slider-vertical .rc-slider-handle 
  margin-left -var(--spacing-xs)
  -ms-touch-action pan-y
  touch-action pan-y

.rc-slider-vertical .rc-slider-mark 
  top 0
  left 1.13rem
  height 100%

.rc-slider-vertical .rc-slider-step 
  height 100%
  width 0.25rem

.rc-slider-vertical .rc-slider-dot 
  left 0.13rem
  margin-bottom -var(--spacing-xs)

.rc-slider-vertical .rc-slider-dot:first-child 
  margin-bottom -var(--spacing-xs)

.rc-slider-vertical .rc-slider-dot:last-child 
  margin-bottom -var(--spacing-xs)

.rc-slider-tooltip-zoom-down-enter,
.rc-slider-tooltip-zoom-down-appear 
  animation-duration 0.3s
  animation-fill-mode both
  display block !important
  animation-play-state paused

.rc-slider-tooltip-zoom-down-leave 
  animation-duration 0.3s
  animation-fill-mode both
  display block !important
  animation-play-state paused

.rc-slider-tooltip-zoom-down-enter.rc-slider-tooltip-zoom-down-enter-active,
.rc-slider-tooltip-zoom-down-appear.rc-slider-tooltip-zoom-down-appear-active 
  animation-name rcSliderTooltipZoomDownIn
  animation-play-state running

.rc-slider-tooltip-zoom-down-leave.rc-slider-tooltip-zoom-down-leave-active 
  animation-name rcSliderTooltipZoomDownOut
  animation-play-state running

.rc-slider-tooltip-zoom-down-enter,
.rc-slider-tooltip-zoom-down-appear 
  transform scale(0, 0)
  animation-timing-function cubic-bezier(0.23, 1, 0.32, 1)

.rc-slider-tooltip-zoom-down-leave 
  animation-timing-function cubic-bezier(0.755, 0.05, 0.855, 0.06)

@keyframes rcSliderTooltipZoomDownIn 
  0% 
    opacity 0
    transform-origin 50% 100%
    transform scale(0, 0)
  
  100% 
    transform-origin 50% 100%
    transform scale(1, 1)
  

@keyframes rcSliderTooltipZoomDownOut 
  0% 
    transform-origin 50% 100%
    transform scale(1, 1)
  
  100% 
    opacity 0
    transform-origin 50% 100%
    transform scale(0, 0)
  

.rc-slider-tooltip 
  position absolute
  left -624.94rem
  top -624.94rem
  visibility visible
  box-sizing border-box
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

.rc-slider-tooltip * 
  box-sizing border-box
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

.rc-slider-tooltip-hidden 
  display none

.rc-slider-tooltip-placement-top 
  padding var(--spacing-xs) 0 var(--spacing-s) 0

.rc-slider-tooltip-inner 
  padding var(--spacing-s) var(--spacing-xs)
  min-width 1.50rem
  height 1.50rem
  font-size var(--font-extrasmall)
  line-height 1
  color var(--color-base-main)
  text-align center
  text-decoration none
  background-color var(--color-primary-main)
  border-radius var(--border-radius-big)
  box-shadow 0 0 0.25rem var(--color-neutral-content)

.rc-slider-tooltip-arrow 
  position absolute
  width 0
  height 0
  border-color transparent
  border-style solid

.rc-slider-tooltip-placement-top .rc-slider-tooltip-arrow 
  bottom 0.25rem
  left 50%
  margin-left -var(--spacing-xs)
  border-width 0.25rem 0.25rem 0
  border-top-color var(--color-primary-main)

