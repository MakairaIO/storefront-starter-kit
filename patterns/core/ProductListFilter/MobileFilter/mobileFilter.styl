.mobile-filter, .mobile-filter__list
  height 100%
  width 100%
  background var(--color-primary-content)
  position fixed
  top 0
  left 0
  z-index var(--z-index-high)
  overflow-y auto

.mobile-filter
  font-size var(--font-regular)
  font-weight var(--font-weight-medium)
  line-height 1.13rem
  letter-spacing 0.01rem
  color var(--color-base-content)
  transform translateX(-110%) // 110% instead of 100% because of the box-shadow
  transition transform 400ms cubic-bezier(0, 1.02, 0.48, 0.92)

  @media (min-width var(--breakpoint-xs))
    max-width 25.00rem
    box-shadow var(--elevation-m)

  &--visible
    transform translateX(0)

.mobile-filter__list
  font-weight var(--font-weight-regular)
  transform translateX(-100%)
  transition transform 200ms cubic-bezier(0, 1.02, 0.48, 0.92)

  &--visible
    transform translateX(0)

.mobile-filter__section
  background var(--color-primary-content)
  border-bottom 0.06rem solid var(--color-primary-content)

  // first element gets top border as well
  .mobile-filter__header + &
    border-top 0.06rem solid var(--color-primary-content)

.mobile-filter__button
  display flex
  align-items center
  width 100%
  height 2.37rem
  padding 0 var(--spacing-m)
  text-align left

.mobile-filter__active-filters
  font-size var(--font-small)
  font-weight var(--font-weight-regular)
  color var(--color-primary-main)
  margin-left auto
  max-width clamp(7.50rem, 100%, 9.38rem)
  text-overflow ellipsis
  text-align right
  overflow hidden
  white-space nowrap

.mobile-filter__button-chevron
  height 0.87rem
  width 2.25rem
  flex-shrink 0
  margin-left auto

  .mobile-filter__active-filters + &
    margin-left 0

.mobile-filter__header, .mobile-filter__list-header
  display flex
  align-items center
  background var(--color-primary-content)
  position sticky
  top 0
  padding var(--spacing-m)

.mobile-filter__header
  .button
    font-weight var(--font-weight-regular)
    margin-left auto

.mobile-filter__list-header
  span
    margin-right var(--spacing-s)
    padding-right var(--spacing-s)
    border-right 0.06rem solid var(--color-primary-content)

.mobile-filter__footer, .mobile-filter__list-footer
  display flex
  justify-content center
  align-items center
  background var(--color-primary-content)
  padding var(--spacing-s) 0
  position sticky
  bottom 0

.mobile-filter__item
  display flex
  align-items center
  font-size var(--font-small)
  letter-spacing 0.01rem
  background var(--color-primary-content)
  border-bottom 0.06rem solid var(--color-primary-content)

  &:first-of-type
    border-top 0.06rem solid var(--color-primary-content)

  &--active
    font-weight var(--font-weight-medium)

  label
    display flex
    align-items center
    width 100%
    height 2.37rem
    line-height 2.37rem
    padding 0 var(--spacing-m)

  .icon
    flex-shrink 0
    height 0.87rem
    width 0.87rem
    margin-right var(--spacing-s)
    color var(--color-primary-main)

  input
    display none

.mobile-filter__range-filter
  background var(--color-primary-content)
  padding var(--spacing-xl) var(--spacing-m)

.mobile-filter__range-filter-label
  display block
  text-align center
  margin-bottom var(--spacing-m)
