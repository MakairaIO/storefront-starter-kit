.dropdown
  display inline-flex
  position relative

  button
    width 100%

.dropdown--with-label

  .button__text
    display flex
    justify-content space-between

    span:first-child
      font-weight var(--font-weight-regular)
      margin-right var(--spacing-xl)

    span:last-child
      font-weight var(--font-weight-bold)

.dropdown__listbox
  display none
  min-width 100%
  z-index var(--z-index-low)

  &--visible
    display block
    background var(--color-primary-content)
    box-shadow var(--elevation-s)
    position absolute
    top 100%

  &--anchor-left
    left 0

  &--anchor-right
    right 0

.dropdown__option
  line-height 1.88rem
  padding var(--spacing-xs) var(--spacing-m)
  white-space nowrap

  &:hover
    cursor pointer

  &--selected
    font-weight var(--font-weight-semi-bold)
