.product-detail-information
  padding 1.2rem 1.5rem 0

  @media (min-width var(--breakpoint-s))
    padding 2.4rem 2rem 0

.product-detail-information__top-header
  display flex
  align-items flex-end
  margin-bottom 1.2rem
  justify-content space-between

  @media (min-width var(--breakpoint-s))
    margin-bottom 2.4rem

.product-detail-information__wrapper
  @media (min-width var(--breakpoint-s))
    display flex
    flex-wrap wrap
    align-items flex-start

  @media (min-width var(--breakpoint-l))
    display grid
    grid-template-areas 'img buy' 'img desc' 'img desc'
    grid-template-columns 1fr 1fr

.product-detail-information__prices
  display flex
  text-align right
  padding 0 0 0.4rem

  .product-detail-information__top-header &
    flex-direction column
    margin-left 0.6rem

    @media (min-width var(--breakpoint-xs))
      flex-direction row
      align-items flex-end

    @media (min-width var(--breakpoint-s))
      display none

  .product-detail-information__buxbox-info &
    justify-content flex-end
    align-items flex-end

    @media (min-width var(--breakpoint-s))
      justify-content flex-start

.product-detail-information__price
  font-size 2.1rem
  font-weight var(--font-weight-semi-bold)
  line-height 3rem

.product-detail-information__image
  margin 0 -1.5rem 1.2rem
  position relative
  max-height 60rem
  height 50vh
  display flex
  justify-content center
  align-items center
  object-fit cover

  @media (min-width var(--breakpoint-xs))
    margin 0 auto 1.2rem

  @media (min-width var(--breakpoint-s))
    flex 1 0 50%

  @media (min-width var(--breakpoint-l))
    grid-area img

  picture
    height 100%
    display flex
    justify-content center

  img
    width 100%

.product-detail-information__magnifier--tap
  height 100%

  > div
    height 100%
    display flex

  > div > img
    max-height 100%
    max-width 100%
    margin auto
    width auto !important

.product-detail-information__image-button
  position absolute
  bottom 1.2rem
  right 1.2rem
  background var(--product-detail-information-zoom-button-background)
  color var(--neutral-00)

.product-detail-information__buybox
  @media (min-width var(--breakpoint-l))
    grid-area buy
    padding-left 4rem

.product-detail-information__buybox-wrapper
  display flex

  @media (min-width var(--breakpoint-xs))
    order -1
    flex-direction column

  @media (min-width var(--breakpoint-m))
    flex 1

.product-detail-information__manufacturer
  max-width 9rem

  @media (min-width var(--breakpoint-s))
    margin-bottom 1rem

  img
    max-width 100%

.product-detail-information__variants
  margin-bottom 0.6rem

.product-detail-information__variant-select
  width 100%

.product-detail-information__variants
  margin-top 2.4rem

.product-detail-information__pill
  margin 0.7rem 0.5rem 0.2rem 0
  padding 1rem 2rem
  border-radius 40px
  border 1px solid var(--neutral-80)

  &--active
    background var(--neutral-100)
    border-colorv var(--neutral-100)
    color var(--neutral-00)

  &:hover
    cursor pointer

.product-detail-information__buxbox-info
  flex 1
  text-align right

  @media (min-width var(--breakpoint-xs))
    text-align left

.product-detail-information__availability
  display inline-flex
  align-items center
  font-size 1.4rem
  font-weight var(--font-weight-medium)
  line-height 2rem
  letter-spacing 0.02rem
  margin-top 0.6rem

  @media (min-width var(--breakpoint-s))
    margin 0.6rem 0 1.8rem

  @media (min-width var(--breakpoint-m))
    margin-bottom 0

.product-detail-information__availability-icon
  display block
  height 1.1rem
  width 1.1rem
  border 1px solid var(--primary)
  border-radius 50%
  margin-right 0.8rem

  .product-detail-information__availability--on-stock &
    background var(--positive)

.product-detail-information__actions
  flex 1 0 100%
  display flex
  justify-content normal
  margin-top 2.4rem
  flex-wrap wrap

  @media (min-width var(--breakpoint-xs))
    flex-wrap unset

  @media (min-width var(--breakpoint-s))
    flex 0 0 auto

  @media (min-width var(--breakpoint-m))
    flex 1 0 100%

.product-detail-information__quantity-select
  margin 0 0.5rem 0 auto

  @media (min-width var(--breakpoint-xs))
    margin 0 1rem

  .button__text
    margin-right 0

.product-detail-information__wishlist
  @media (min-width var(--breakpoint-xs))
    margin-left auto

.product-detail-information__description
  margin-top 3.5rem

  @media (min-width var(--breakpoint-l))
    grid-area desc

    @supports (display grid)
      padding-left 4rem
      margin-top 0

  .copytext
    column-count 3
    column-width 30rem

    @media (min-width var(--breakpoint-s))
      column-gap 2rem

.product-detail-information__add-bundle
  flex-grow 2

  @media (min-width var(--breakpoint-xs))
    flex-grow unset
    margin-left 1rem

.product-detail-information__add-cart
  flex-grow unset