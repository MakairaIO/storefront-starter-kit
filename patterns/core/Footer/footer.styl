$breakpoint-medium = 768px
$breakpoint-small = 400px

.footer
  display flex
  flex-wrap wrap
  width calc(100% - 3rem) // 1.5rem "padding" on each side
  margin 4.8rem auto 0
  padding 1.2rem 2rem
  border-top 1px solid var(--neutral-40)

  &__column
    padding 0
    margin 0
    flex-grow 1
    margin-bottom 1rem

  &__heading
    font-size 1.8rem
    line-height 3.2rem
    margin-bottom 1rem
    font-weight var(--font-weight-semi-bold)

  &__link
    display block
    font-size 1.6rem
    line-height 2rem

@media (max-width $breakpoint-medium)
  .footer
    &__column
      width 50%
      flex-grow 2
      margin-bottom 1.5rem
      text-align center

    &__link
      font-size 1.6rem
      line-height 3rem

@media (max-width $breakpoint-small)
  .footer
    &__column
      width 100%
      flex-grow 1
