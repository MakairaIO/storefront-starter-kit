.form-field
  display block
  margin-top var(--spacing-m)

  &.form-field--required
    .form-field__label:after
      content " *"

  .form-field__label
    flex 0 0 100%
    max-width 100%
    display block
    font-weight var(--font-weight-light)
    font-size var(--font-regular)

  .form-field__component
    width 100%
    font-size var(--font-size-base)
    font-weight var(--font-weight-medium)
    font-family var(--font-family-regular)
    margin-top var(--spacing-xs)
    padding var(--spacing-s)
    border-radius var(--border-radius-small)
    border 0.06rem solid var(--neutral-40)

    &.form-field__select
      min-height 2.50rem

    &.form-field__input
      min-height 2.50rem

    &.form-field__input[type="text"]:focus,
    &.form-field__input[type="email"]:focus,
    &.form-field__textarea:focus
      border-color var(--neutral-60)
      box-shadow unset
      outline none

    &.form-field__textarea
      min-height 6.25rem

  &__status
    font-weight var(--font-weight-light)
    font-size var(--font-regular)
    width 100%
    margin-top var(--spacing-m)
    margin-bottom var(--spacing-m)
    padding var(--spacing-s)
    white-space normal
    min-height 2.50rem
    border-radius var(--border-radius-small)
    display none

    &.form-field__status--failure
      display block
      background-color var(--error)
      border 0.06rem solid var(--error)

    &.form-field__status--success
      display block
      background-color var(--positive)
      border 0.06rem solid var(--positive)

  .form-field__error
    margin-top var(--spacing-xs)
    color var(--error)
