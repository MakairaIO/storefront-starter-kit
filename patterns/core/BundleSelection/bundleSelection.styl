.bundle-list__wrapper
  padding 0 var(--spacing-m)
  margin-top var(--spacing-l)
  display flex
  align-items center

.bundle-list__error
  padding 0 var(--spacing-m)
  margin-top var(--spacing-s)
  color var(--color-danger-main)

.bundle-list__actions
  flex 1
  display flex
  justify-content center

.bundle-item
  border 0.06rem solid var(--color-primary-content)
  border-radius var(--border-radius-small)
  padding var(--spacing-s)
  margin-right var(--spacing-s)
  display flex
  width 18.75rem

  &__active
    box-shadow inset 0 0 0 0.06rem var(--color-primary-main)
    border-color var(--color-primary-main)

  &__error
    box-shadow inset 0 0 0 0.06rem var(--color-danger-main)
    border-color var(--color-danger-main)

  &__image
    width 4.69rem
    height 4.69rem
    flex-shrink 0

    img
      width 100%
      height 100%
      object-fit contain

  &__info
    margin-left var(--spacing-s)
    display flex
    flex-direction column
    justify-content space-between

  &__name
    text-transform uppercase
    margin-top var(--spacing-xs)
    display -webkit-box
    -webkit-line-clamp 2
    -webkit-box-orient vertical
    overflow hidden
    max-height 1.63rem

  &__button
    width 100%
    display flex
    align-items center
    margin-top var(--spacing-xs)
    cursor pointer
    line-height 0.69rem
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

    .icon
      width 0.63rem
      height 0.63rem
      margin-right var(--spacing-xs)
