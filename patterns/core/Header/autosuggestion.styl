$breakpoint-medium = 800px

.autosuggest__image
  display flex
  flex-direction row
  height 7rem

  picture
    height 100%
    width 5rem
    text-align right

    img
      height 100%
  .text
    flex 1
    align-self center
    padding-left 2rem

.autosuggest-box
  display flex
  position relative
  max-width 80rem
  margin-left auto
  box-shadow: inset 0 -1px 0 0 #dcdee0, 0 2px 16px -10px rgba(0,0,0,.5);
  padding 3rem 1.5rem
  z-index var(--z-index-highest)
  background-color var(--neutral-00)
  flex-direction column
  max-height: calc(100vh - 6rem);
  overflow-y: auto;
  height: 100%;

  @media (min-width $breakpoint-medium)
    flex-direction row
    padding 3rem 2rem

  .autosuggest-box__close
    flex none
    position absolute
    top 0
    right 2rem

.autosuggest-box__links
    flex 1
.autosuggest-box__products
  flex 1

  .heading
    @media (min-width $breakpoint-medium)
      padding-left 2rem

.autosuggest-box__link-box
  margin-bottom 2.5rem

.autosuggest__product-item
  padding 1rem
