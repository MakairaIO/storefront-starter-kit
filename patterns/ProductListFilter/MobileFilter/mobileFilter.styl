.mobile-filter
.mobile-filter__list
  height 100%
  width 100%
  background var(--neutral-10)
  position fixed
  top 0
  left 0
  z-index var(--z-index-high)
  overflow-y auto

.mobile-filter
  font-size 1.6rem
  font-weight var(--font-weight-medium)
  line-height 1.8rem
  letter-spacing 0.023rem
  color var(--neutral-90)
  transform translateX(-100%)
  transition transform 400ms cubic-bezier(0, 1.02, 0.48, 0.92)

  &--visible
    transform translateX(0)

.mobile-filter__section
  background var(--neutral-00)

  & + &
    border-top 1px solid var(--neutral-40)

  &:last-of-type
    border-bottom 1px solid var(--neutral-40)

  > button
    display block
    width 100%
    height 3.8rem
    padding 0 1.5rem
    text-align left

.mobile-filter__header
.mobile-filter__list-header
  display flex
  justify-content center
  align-items center
  height 4rem
  position sticky
  top 0
  background var(--neutral-10)

  span
    text-transform uppercase

  button
    color var(--secondary)

.mobile-filter__list-header
  span
    margin-right 1rem
    padding-right 1rem
    border-right 1px solid var(--neutral-40)

.mobile-filter__footer
.mobile-filter__list-footer
  height 6rem
  background var(--primary)
  position sticky
  left 0
  right 0
  bottom 0

  button
    display block
    height 100%
    width 100%
    color var(--neutral-10)
    text-transform uppercase

.mobile-filter__item
  display flex
  align-items center
  font-size 1.4rem
  letter-spacing 0.02rem
  background var(--neutral-00)

  & + &
    border-top 1px solid var(--neutral-40)

  &--active
    color var(--secondary)

  label
    display block
    align-items center
    width 100%
    height 3.8rem
    line-height 3.8rem
    padding 0 1.5rem

  .icon
    height 1.4rem
    width 3.6rem

  input
    display none
