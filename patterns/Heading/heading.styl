.heading
  &--200
    font-weight var(--font-weight-semi-bold)
    font-size 2.5rem
    line-height 3rem
    padding-top 0.1rem

  &--175
    font-weight var(--font-weight-regular)
    font-size 2.1rem
    line-height 2.4rem
    padding-top 0.5rem

  &--150
    font-weight var(--font-weight-medium)
    font-size 2.1rem
    line-height 3rem
    padding-top 0.2rem

  &--125
    font-weight var(--font-weight-semi-bold)
    font-size 1.7rem
    line-height 2.4rem
    letter-spacing 0.025rem
    padding-top 0.1rem

  &--100
    font-weight var(--font-weight-medium)
    font-size 1.4rem
    line-height 1.8rem
    letter-spacing 0.02rem
    padding-top 0.5rem
